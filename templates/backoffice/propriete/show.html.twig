{% extends "backoffice/base/base.html.twig" %}

{% block body %}
<div class="bg-light">
    <h1 class="mt-3 text-center">{{propriete.titre}}</h1>
</div>
<div class="container">
    <form action="" class="form">
        {{form_start(form)}}
        <div class="row form-group">
            <div class="col-8">
                <div class="row mb-3">
                    {{form_row(form.titre)}}
                </div>
                <div class="row mb-3">
                    <div class="col-4">{{form_row(form.surface)}}</div>
                    <div class="col-4">{{form_row(form.piece)}}</div>
                    <div class="col-4">{{form_row(form.etage)}}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-4">{{form_row(form.prix)}}</div>
                    <div class="col-4">{{form_row(form.chauffage)}}</div>
                    <div class="col-4">{{form_row(form.ville)}}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-6">{{form_row(form.adresse)}}</div>
                    <div class="col-4">{{form_row(form.codePostal)}}</div>
                    <div class="col-2">{{form_row(form.vendu)}}</div>
                </div>
                <div class="row mb-3">
                    <div>
                        <a class="btn btn-danger mt-3" href="{{path('delete',{id:propriete.id})}}">Supprimer</a>
                    </div>
                </div>
            </div>
            <div class="col-4">
                {{form_row(form.description)}}
            </div>
        </div>
        {{form_end(form)}}
    </form>
</div>
{% endblock %}